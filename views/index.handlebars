<div class="container">
    <h1>Eat the Burger!</h1>

    <div>
        <h2>Non-eaten burgers</h2>
        <ul>
            {{#each burger}}
                {{#unless this.devoured}}
                    <li>{{this.id}}. {{this.burger_name}}</li>
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button type="submit">Eat this!</button>
                    </form>
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div>
        <h2>Eaten burgers</h2>
        <ul>
            {{#each burger}}
                {{#if this.devoured}}
                    <li>{{this.id}}. {{this.burger_name}}</li>
                {{/if}}
            {{/each}}
        </ul>
    </div>

    <form action="/" method="POST">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="burger_name" name="burger_name">
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>